<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.AreaDao">
    <select id="queryAllArea" resultType="com.example.demo.entity.Area">
        select * from tb_area;
    </select>

    <insert id="insertArea" parameterType="com.example.demo.entity.Area">
        insert into tb_area(area_name,priority,create_time,last_edit_time) values(#{areaName},#{priority},#{createTime},#{lastEditTime});
    </insert>

    <delete id="deleteAreaById">
        delete from tb_area where area_id = #{areaId};
    </delete>

    <update id="updateArea" parameterType="com.example.demo.entity.Area">
        update tb_area set
            <if test="areaName != null">area_name = #{areaName}</if>
            <if test="priority != null">,priority = #{priority}</if>
            <if test="lastEditTime != null">,last_edit_time = #{lastEditTime}</if>
        where area_id = #{areaId};
    </update>

    <select id="queryAreaById" resultType="com.example.demo.entity.Area">
        select * from tb_area where area_id = #{areaId};
    </select>
</mapper>